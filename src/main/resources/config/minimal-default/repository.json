{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : ["default"],
        "default" : "default",
        "allowCreation" : true,
        "cacheSize" : 20000
    },
    "storage" : {
        "persistence": {
            "type": "file",
            "path" : "${fcrepo.object.directory:target/objects}"
        },
        "binaryStorage" : {
            "type" : "file",
            "directory" : "${fcrepo.binary.directory:target/binaries}",
            "minimumBinarySizeInBytes" : 4096
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "org.fcrepo.auth.common.BypassSecurityServletAuthenticationProvider" }
        ]
    },
    "garbageCollection" : {
        "threadPool" : "modeshape-gc",
        "initialTime" : "00:00",
        "intervalInHours" : 24
    },
    "node-types" : ["fedora-node-types.cnd", "/config/minimal-default/node-types_ual.cnd"],

    "indexProviders" : {
        "local" : {
            "classname" : "org.modeshape.jcr.index.local.LocalIndexProvider",
            "directory" : "${fcrepo.modeshape.index.directory}",
            "cacheLRUEnable" : true,
            "mmapFileEnable" : true,
            "commitFileSyncDisable" : true,
            "transactionDisable" : true,
            "asyncWrite" : true,
            "cacheSize" : 1000000
        },
          "lucene" : {
            "classname" : "lucene",
            "directory" : "${fcrepo.modeshape.index.directory}",
            "analyzerClass" : "org.apache.lucene.analysis.standard.StandardAnalyzer",
            "lockFactoryClass" : "org.apache.lucene.store.NoLockFactory"
        }
    },
    "indexes" : {
        "hasModel" : {
            "kind" : "value",
            "provider" : "local",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "model:hasModel(STRING)"
        },
        "accessRights" : {
            "kind" : "value",
            "provider" : "local",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "dcterms:accessRights(STRING)"
        },
        "lastModified" : {
            "kind" : "value",
            "provider" : "local",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "jcr:lastModified(DATE)"
        },
        "type" : {
            "kind" : "value",
            "provider" : "local",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "dcterms:type(STRING)"
        },
        "memberOf" : {
            "kind" : "value",
            "provider" : "lucene",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "pcdm:memberOf(STRING)"
        },
        "ualPath" : {
            "kind" : "value",
            "provider" : "lucene",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "ual:path(STRING)"
        },
        "localName" : {
            "kind" : "value",
            "provider" : "local",
            "synchronous" : "false",
            "nodeType" : "fedora:Resource",
            "columns" : "mode:localName(STRING)"
        }
    }
}
